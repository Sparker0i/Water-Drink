<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MD_GridItem" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/water_container"
            android:layout_width="@dimen/water_log_image_size"
            android:layout_height="@dimen/water_log_image_size"
            android:scaleType="center"
            android:layout_gravity="center"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/water_amount"
            tools:text="Item"
            android:textSize="18sp"
            style="@style/WaterLogAmount" />
        <TextView
            android:id="@+id/water_time"
            tools:text="Item"
            android:textSize="10sp"
            style="@style/WaterLogAmount" />
    </LinearLayout>
</FrameLayout>